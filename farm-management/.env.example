# .env.example
# This is a template for the .env file required to run the Farm Management System.
# Copy this file to .env and fill in the values for your environment.
# Do NOT commit .env to version control; ensure .env is in .gitignore.

# Django secret key (generate a secure key, e.g., using Python: `from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())`)
SECRET_KEY=replace-with-a-secure-secret-key

# Debug mode (True for development, False for production)
DEBUG=True

# Comma-separated list of allowed hosts (no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated list of CORS-allowed origins (no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# PostgreSQL database settings
DB_NAME=farmdb
DB_USER=your-postgres-username
DB_PASSWORD=your-postgres-password
DB_HOST=localhost
DB_PORT=5432